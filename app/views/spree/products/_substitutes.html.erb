<% if !@promotion.nil?%>
    Discounts </br>
    <%= image_tag(@promotion[:product].images.first.attachment.url(:small)) %>
    <%= @promotion[:product].name %>
    <%= @promotion[:discount] %>% Off!

<% end %>

<% if !@substitutes.nil? && !@substitutes.empty? %>
    You might be interested in
    <br/>
    <% @substitutes.each do |substitute|%>
        <% product = substitute[:product] %>
        <%= image_tag(product.images.first.attachment.url(:small)) %>
        <%= product.name %>
    <% end%>
<% end%>
